{
  "info": {
    "name": "DMS API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Auth / Me",
      "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{base}}/api/v1/auth/me", "host": ["{{base}}"], "path": ["api","v1","auth","me"] } }
    },
    {
      "name": "Create Document",
      "request": {
        "method": "POST",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"ID\": \"ABC-XY-ENG-PRO-001\",\n  \"Title\": \"Quality Policy\",\n  \"Metadata\": {\n    \"CompanyCode\": \"ABC\", \"SubsidiaryCode\": \"XY\", \"DepartmentCode\": \"ENG\", \"DocumentTypeCode\": \"PRO\",\n    \"IssueDate\": \"2025-01-01\", \"ReviewDate\": \"2025-02-01\", \"Keywords\": [\"quality\"], \"Description\": \"desc\",\n    \"RetentionSchedule\": { \"policy\": \"STANDARD\", \"durationMonths\": 12, \"startDate\": \"2025-01-01\" }\n  }\n}" },
        "url": { "raw": "{{base}}/api/v1/documents", "host": ["{{base}}"], "path": ["api","v1","documents"] }
      }
    },
    {
      "name": "Search",
      "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{base}}/api/v1/search?q=policy", "host": ["{{base}}"], "path": ["api","v1","search"], "query": [ { "key": "q", "value": "policy" } ] } }
    }
  ],
  "variable": [ { "key": "base", "value": "http://localhost:3000" }, { "key": "token", "value": "" } ]
}

